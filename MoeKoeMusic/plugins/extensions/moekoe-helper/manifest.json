{
  "manifest_version": 3,
  "name": "MoeKoe Music Helper",
  "version": "1.0.0",
  "description": "MoeKoe Music 助手插件 - 提供歌词翻译、音乐识别等功能",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MoeKoe Music 助手"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}